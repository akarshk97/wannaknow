FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies, Mantine UI, and type definitions
RUN npm install && \
    npm install @mantine/core @mantine/hooks @emotion/react && \
    npm install --save-dev @types/react @types/react-dom

# Install vite globally
RUN npm install -g vite

# Copy project files
COPY . .

EXPOSE 5173

# Use npx to run vite
CMD ["npx", "vite", "--host"]